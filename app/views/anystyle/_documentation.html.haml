  %section#rubygem
    .container
      .row
        .col-md-12
          %h2=t "documentation.ruby.title"
          %p.lead=t "documentation.ruby.install"
          %pre
            %code
              :preserve
                $ [sudo] gem install anystyle
          %p=t "documentation.ruby.usage"
          %pre
            %code
              :preserve
                >> require "anystyle"

                >> AnyStyle.parse """
                    Turing, Alan, Computing Machinery and Intelligence, Mind 59, pp 433-460 (1950)
                   """
                => [{
                     :type => "article-journal",
                     :author => [{ :family => "Turing", :given => "Alan" }],
                     :date => ["1950"],
                     :title => "Computing Machinery and Intelligence",
                     :volume => ["59"],
